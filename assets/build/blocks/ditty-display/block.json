{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "ditty/display",
  "version": "1.0.0",
  "title": "Ditty Display",
  "description": "A dynamic display with ticker and carousel variations.",
  "category": "widgets",
  "icon": "slides",
  "keywords": [
    "ticker",
    "carousel",
    "slider",
    "display",
    "news"
  ],
  "textdomain": "ditty-news-ticker",
  "attributes": {
    "type": {
      "type": "string",
      "default": "ticker"
    },
    "direction": {
      "type": "string",
      "default": "left"
    },
    "speed": {
      "type": "number",
      "default": 10
    },
    "hoverPause": {
      "type": "boolean",
      "default": false
    },
    "cloneItems": {
      "type": "boolean",
      "default": true
    },
    "itemMaxWidth": {
      "type": "string",
      "default": ""
    },
    "itemElementsWrap": {
      "type": "string",
      "default": "nowrap"
    },
    "minHeight": {
      "type": "string",
      "default": "300px"
    },
    "fillHeight": {
      "type": "boolean",
      "default": false
    },
    "editMode": {
      "type": "string",
      "default": "edit"
    },
    "carouselLoop": {
      "type": "boolean",
      "default": true
    },
    "carouselSpeed": {
      "type": "number",
      "default": 400
    },
    "carouselRewind": {
      "type": "boolean",
      "default": false
    },
    "carouselRewindSpeed": {
      "type": "number",
      "default": 0
    },
    "carouselRewindByDrag": {
      "type": "boolean",
      "default": false
    },
    "carouselHeight": {
      "type": "string",
      "default": ""
    },
    "carouselFixedWidth": {
      "type": "string",
      "default": ""
    },
    "carouselFixedHeight": {
      "type": "string",
      "default": ""
    },
    "carouselHeightRatio": {
      "type": "number",
      "default": 0
    },
    "carouselAutoWidth": {
      "type": "boolean",
      "default": false
    },
    "carouselAutoHeight": {
      "type": "boolean",
      "default": false
    },
    "carouselStart": {
      "type": "number",
      "default": 0
    },
    "carouselPerPage": {
      "type": "number",
      "default": 1
    },
    "carouselPerMove": {
      "type": "number",
      "default": 0
    },
    "carouselFocus": {
      "type": "string",
      "default": ""
    },
    "carouselArrows": {
      "type": "boolean",
      "default": true
    },
    "carouselPagination": {
      "type": "boolean",
      "default": true
    },
    "carouselPaginationDirection": {
      "type": "string",
      "default": ""
    },
    "carouselEasing": {
      "type": "string",
      "default": "cubic-bezier(0.25, 1, 0.5, 1)"
    },
    "carouselDrag": {
      "type": "string",
      "default": "true"
    },
    "carouselSnap": {
      "type": "boolean",
      "default": false
    },
    "carouselAutoplay": {
      "type": "boolean",
      "default": true
    },
    "carouselInterval": {
      "type": "number",
      "default": 3000
    },
    "carouselPauseOnHover": {
      "type": "boolean",
      "default": true
    },
    "carouselPauseOnFocus": {
      "type": "boolean",
      "default": true
    },
    "carouselResetProgress": {
      "type": "boolean",
      "default": true
    },
    "carouselDirection": {
      "type": "string",
      "default": "ltr"
    },
    "carouselUpdateOnMove": {
      "type": "boolean",
      "default": false
    }
  },
  "providesContext": {
    "dittyDisplay/type": "type",
    "dittyDisplay/direction": "direction",
    "dittyDisplay/speed": "speed",
    "dittyDisplay/hoverPause": "hoverPause",
    "dittyDisplay/cloneItems": "cloneItems",
    "dittyDisplay/itemMaxWidth": "itemMaxWidth",
    "dittyDisplay/itemElementsWrap": "itemElementsWrap",
    "dittyDisplay/editMode": "editMode"
  },
  "supports": {
    "html": false,
    "anchor": true,
    "customClassName": true,
    "align": [
      "wide",
      "full"
    ],
    "typography": {
      "fontSize": true,
      "lineHeight": true,
      "__experimentalFontFamily": true,
      "__experimentalFontWeight": true,
      "__experimentalFontStyle": true,
      "__experimentalTextTransform": true,
      "__experimentalTextDecoration": true,
      "__experimentalLetterSpacing": true,
      "__experimentalDefaultControls": {
        "fontSize": true
      }
    },
    "color": {
      "background": true,
      "text": true,
      "gradients": true,
      "__experimentalDefaultControls": {
        "background": true,
        "text": true
      }
    },
    "spacing": {
      "margin": true,
      "padding": true,
      "blockGap": true,
      "__experimentalDefaultControls": {
        "padding": true,
        "blockGap": true
      }
    },
    "__experimentalBorder": {
      "color": true,
      "radius": true,
      "style": true,
      "width": true,
      "__experimentalDefaultControls": {
        "color": true,
        "radius": true,
        "style": true,
        "width": true
      }
    },
    "dimensions": {
      "minHeight": true
    }
  },
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "render": "file:./render.php"
}