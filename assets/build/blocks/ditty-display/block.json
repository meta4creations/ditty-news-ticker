{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "ditty/display",
  "version": "1.0.0",
  "title": "Ditty Display",
  "description": "A dynamic display with ticker and slider variations.",
  "category": "widgets",
  "icon": "slides",
  "keywords": [
    "ticker",
    "slider",
    "slider",
    "display",
    "news"
  ],
  "textdomain": "ditty-news-ticker",
  "attributes": {
    "type": {
      "type": "string",
      "default": "ticker"
    },
    "direction": {
      "type": "string",
      "default": "left"
    },
    "speed": {
      "type": "number",
      "default": 10
    },
    "hoverPause": {
      "type": "boolean",
      "default": false
    },
    "cloneItems": {
      "type": "boolean",
      "default": true
    },
    "itemMaxWidth": {
      "type": "string",
      "default": ""
    },
    "itemElementsWrap": {
      "type": "string",
      "default": "nowrap"
    },
    "minHeight": {
      "type": "string",
      "default": "300px"
    },
    "fillHeight": {
      "type": "boolean",
      "default": false
    },
    "editMode": {
      "type": "string",
      "default": "edit"
    },
    "sliderLoop": {
      "type": "boolean",
      "default": true
    },
    "sliderSpeed": {
      "type": "number",
      "default": 400
    },
    "sliderRewind": {
      "type": "boolean",
      "default": false
    },
    "sliderRewindSpeed": {
      "type": "number",
      "default": 0
    },
    "sliderRewindByDrag": {
      "type": "boolean",
      "default": false
    },
    "sliderHeight": {
      "type": "string",
      "default": ""
    },
    "sliderFixedWidth": {
      "type": "string",
      "default": ""
    },
    "sliderFixedHeight": {
      "type": "string",
      "default": ""
    },
    "sliderHeightRatio": {
      "type": "number",
      "default": 0
    },
    "sliderAutoWidth": {
      "type": "boolean",
      "default": false
    },
    "sliderAutoHeight": {
      "type": "boolean",
      "default": false
    },
    "sliderStart": {
      "type": "number",
      "default": 0
    },
    "sliderPerPage": {
      "type": "number",
      "default": 1
    },
    "sliderPerMove": {
      "type": "number",
      "default": 0
    },
    "sliderFocus": {
      "type": "string",
      "default": ""
    },
    "sliderArrows": {
      "type": "boolean",
      "default": true
    },
    "sliderPagination": {
      "type": "boolean",
      "default": true
    },
    "sliderPaginationDirection": {
      "type": "string",
      "default": ""
    },
    "sliderEasing": {
      "type": "string",
      "default": "cubic-bezier(0.25, 1, 0.5, 1)"
    },
    "sliderDrag": {
      "type": "string",
      "default": "true"
    },
    "sliderSnap": {
      "type": "boolean",
      "default": false
    },
    "sliderAutoplay": {
      "type": "boolean",
      "default": true
    },
    "sliderInterval": {
      "type": "number",
      "default": 3000
    },
    "sliderPauseOnHover": {
      "type": "boolean",
      "default": true
    },
    "sliderPauseOnFocus": {
      "type": "boolean",
      "default": true
    },
    "sliderResetProgress": {
      "type": "boolean",
      "default": true
    },
    "sliderDirection": {
      "type": "string",
      "default": "ltr"
    },
    "sliderUpdateOnMove": {
      "type": "boolean",
      "default": false
    }
  },
  "providesContext": {
    "dittyDisplay/type": "type",
    "dittyDisplay/direction": "direction",
    "dittyDisplay/speed": "speed",
    "dittyDisplay/hoverPause": "hoverPause",
    "dittyDisplay/cloneItems": "cloneItems",
    "dittyDisplay/itemMaxWidth": "itemMaxWidth",
    "dittyDisplay/itemElementsWrap": "itemElementsWrap",
    "dittyDisplay/editMode": "editMode"
  },
  "supports": {
    "html": false,
    "anchor": true,
    "customClassName": true,
    "align": [
      "wide",
      "full"
    ],
    "typography": {
      "fontSize": true,
      "lineHeight": true,
      "__experimentalFontFamily": true,
      "__experimentalFontWeight": true,
      "__experimentalFontStyle": true,
      "__experimentalTextTransform": true,
      "__experimentalTextDecoration": true,
      "__experimentalLetterSpacing": true,
      "__experimentalDefaultControls": {
        "fontSize": true
      }
    },
    "color": {
      "background": true,
      "text": true,
      "gradients": true,
      "__experimentalDefaultControls": {
        "background": true,
        "text": true
      }
    },
    "spacing": {
      "margin": true,
      "padding": true,
      "blockGap": true,
      "__experimentalDefaultControls": {
        "padding": true,
        "blockGap": true
      }
    },
    "__experimentalBorder": {
      "color": true,
      "radius": true,
      "style": true,
      "width": true,
      "__experimentalDefaultControls": {
        "color": true,
        "radius": true,
        "style": true,
        "width": true
      }
    },
    "dimensions": {
      "minHeight": true
    }
  },
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "render": "file:./render.php"
}